{
    "compilerOptions": {
      "module": "commonjs",
      "target": "esnext",
      "lib": ["es2015", "es2017", "DOM"],
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitAny": true,
      "removeComments": false,
      "preserveConstEnums": true
    },
    "include": ["action.yml", "index.ts","global.d.ts", "__tests__"],
    "exclude": ["node_modules"]
  }