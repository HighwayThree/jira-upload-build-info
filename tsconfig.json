{
    "compilerOptions": {
      "module": "commonjs",
      "target": "esnext",
      "lib": ["es2015", "es2017"],
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitAny": true,
      "removeComments": false,
      "preserveConstEnums": true
    },
    "include": ["action.yml", "index.ts", "debug-action/debug.ts", "debug-action/__tests__/debug.tests.ts"],
    "exclude": ["node_modules"]
  }